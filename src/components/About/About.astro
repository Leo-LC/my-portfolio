<style>
  p {
    font-size: 2.5rem;
    max-width: 40ch;
    line-height: 1.3;
    letter-spacing: -0.1rem;
    font-weight: 200;
  }
  .quote {
    font-size: 2rem;
    text-align: right;
    font-family: var(--paragraph-font-family);
    font-weight: 200;
    color: var(--text-secondary);
  }

  @media screen and (max-width: 1280px) {
    p {
      font-size: 2.25rem;
      max-width: 34ch;
    }

    .quote {
      font-size: 1.5rem;
    }
  }

  @media screen and (max-width: 768px) {
    p {
      font-size: 1.5rem;
      max-width: 20ch;
    }

    .quote {
      font-size: 1.25rem;
    }
  }

  .about_wrapper {
    width: 100%;
    padding-inline: 1rem;
    flex-grow: 1;
  }

  .details_wrapper {
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    justify-content: space-evenly;
    padding-block: 2rem;
  }
  .separator {
    background-color: var(--border-primary);
  }
</style>

<script>
  import gsap from "gsap";
  import { ScrollTrigger } from "gsap/dist/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  const text = document.querySelectorAll(".details_wrapper > p");

  let tl = gsap.timeline({
    scrollTrigger: ".details_wrapper",
    delay: 0.2,
  });

  tl.fromTo(
    text,
    {
      opacity: 0,
      yPercent: 100,
    },
    {
      opacity: 1,
      yPercent: 0,
      duration: 3,
      stagger: 0.5,
      ease: "power2.out",
    },
  );

  tl.eventCallback("onComplete", () => {
    tl.kill();
  });
</script>

