<style>
  p {
    font-size: 2.5rem;
    max-width: 40ch;
    line-height: 1.3;
    letter-spacing: -0.1rem;
    font-weight: 200;
  }
  .quote {
    font-size: 2rem;
    text-align: right;
    font-family: var(--paragraph-font-family);
    font-weight: 200;
    color: var(--text-secondary);
  }

  @media screen and (max-width: 1280px) {
    p {
      font-size: 2.25rem;
      max-width: 34ch;
    }

    .quote {
      font-size: 1.5rem;
    }
  }

  @media screen and (max-width: 768px) {
    p {
      font-size: 1.5rem;
      max-width: 20ch;
    }

    .quote {
      font-size: 1.25rem;
    }
  }

  .about_wrapper {
    width: 100%;
    padding-inline: 1rem;
    flex-grow: 1;
  }

  .details_wrapper {
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    justify-content: space-evenly;
    padding-block: 2rem;
  }
  .separator {
    background-color: var(--border-primary);
  }
</style>

<script>
  import "splitting/dist/splitting.css";
  import "splitting/dist/splitting-cells.css";
  import gsap from "gsap";

  const text = document.querySelectorAll(".details_text");

  text.forEach((line, i) => {
    let tl = gsap.timeline({
      scrollTrigger: ".details_text",
      delay: 0.5 * i,
    });

    tl.fromTo(
      line,
      {
        opacity: 0,
      },
      {
        opacity: 1,
        duration: 4,
        stagger: 0.1,
        ease: "power2.out",
      },
    );
    tl.eventCallback("onComplete", () => {
      tl.kill();
    });
  });
</script>

