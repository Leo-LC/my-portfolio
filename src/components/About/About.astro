---
import SectionTitle from "../Text/SectionTitle/SectionTitle.tsx";
import AboutDetails from "./AboutDetails.astro";
---

<section
  id="about"
  class="relative h-screen pt-[var(--header-height)] overflow-hidden flex flex-col"
>
  <!--   <div class="background absolute z-0 inset-0">
    <img
      class="thumbnail h-full object-cover"
      src="src/images/Coffee Ata Y.jpg"
      alt=""
    />
  </div> -->
  <SectionTitle client:visible title="Let me introduce myself . " />
  <div
    class="about_wrapper relative inset-0 overflow-hidden flex flex-col shrink-1"
  >
    <q class="quote">Embrace challenges to predict and create your future.</q>
    <div class="details_wrapper">
      <!--   <p class="details_text" id="target">
        I'm all about crafting web experiences that not only meet but exceed
        expectations. Collaboration and communication are at the heart of my
        work – it's about joining forces to bring visions to life.
      </p> -->
      <AboutDetails
        text="I'm all about crafting web experiences that not only meet but exceed expectations. Collaboration and communication are at the heart of my work – it's about joining forces to bring visions to life."
      />

      <div class="separator w-[50%] h-0.5 my-12"></div>
      <AboutDetails
        text="Beyond the screen, I'm an avid traveler, continuously drawn to new countries and cultures. The comforting aroma of coffee and the soothing sounds of music inspire my personal journey."
      />
    </div>

    <style>
      section {
        background-color: var(--bg-secondary);
      }

      .quote {
        font-family: var(--paragraph-font-family);
        font-size: 1.5rem;
        font-style: italic;
        font-weight: 200;
        align-self: flex-end;
        padding: 1rem;
        color: var(--text-secondary);
        position: relative;
        z-index: 1;
      }

      .details_wrapper {
        flex-grow: 1;
        padding-inline: 20vw;
        display: flex;
        flex-direction: column;
        justify-content: center;
        text-align: center;
        align-items: center;
      }

      .separator {
        background-color: var(--border-primary);
      }
    </style>

