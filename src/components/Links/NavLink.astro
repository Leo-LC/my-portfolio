---
const { href, text, style } = Astro.props;
---

<a class="nav__item text-2xl md:text-4xl xl:text-6xl" style={style} href={href}>
  {text}
</a>

<style>
  @media (max-width: 768px) {
    .nav__item {
      width: 100%;
      text-align: center;
    }
  }
  a:hover {
    letter-spacing: 1px;
  }
</style>
