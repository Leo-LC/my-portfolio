---
import NavLinks from "../Links/NavLinks.astro";
---

<div class="wrapper-navbar h-full">
  <nav class="relative flex justify-between items-center">
    <a
      class="nav-item full-name text-2xl md:text-4xl xl:text-6xl"
      href="#hero"
      id="nametag">LEO LECEE</a
    >
    <div class="flex">
      <NavLinks />
    </div>
  </nav>
</div>

<style>
  nav {
    font-family: var(--headings-font-family);
    height: 100%;
    clip-path: polygon(0 0, 100% 0, 100% 100%, 0 100%);
  }

  a {
    line-height: 1;
  }
  a:hover {
    letter-spacing: 1px;
  }
</style>

<!-- Blurry Navbar on Scroll -->
<script>
  import gsap from "../../scripts/gsap";

  let tl = gsap.timeline({
    scrollTrigger: {
      trigger: "#hero",
      start: "center center",
      end: "bottom center",
      scrub: true,
      markers: false,
    },
  });

  tl.to(".blur", {
    opacity: 1,
  });
</script>
