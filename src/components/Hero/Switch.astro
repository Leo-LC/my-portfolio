<aside
  class="social text-white absolute z-10 right-0 top-[15%] flex flex-row-reverse gap-4 items-center"
>
  <div class="line w-[100px] h-[2px] bg-[var(--text-secondary)]"></div>

  <div class="btn-container relative">
    <label class="switch btn-color-mode-switch">
      <input
        value="1"
        id="color_mode"
        name="color_mode"
        type="checkbox"
        checked
      />

      <label
        class="btn-color-mode-switch-inner"
        data-off="Light"
        data-on="Dark"
        for="color_mode"></label>
    </label>
  </div>
</aside>

<style>
  .btn-container {
    display: flex;
    text-align: center;
  }

  /* text on light  */
  label {
    font-size: 13px;
    color: #424242;
    font-weight: 500;
  }

  .btn-color-mode-switch {
    display: inline-block;
    margin: 0px;
    position: relative;
  }

  .btn-color-mode-switch > label.btn-color-mode-switch-inner {
    width: 140px;
    height: 30px;
    background: #e0e0e0;
    border-radius: 0.25rem;
    overflow: hidden;
    position: relative;
    transition: all 0.3s ease;
    display: block;
  }

  /* text */
  .btn-color-mode-switch > label.btn-color-mode-switch-inner:before {
    content: attr(data-on);
    position: absolute;
    font-size: 12px;
    font-weight: 500;
    top: 7px;
    right: 20px;
  }

  /* Switch en mode light*/
  .btn-color-mode-switch > label.btn-color-mode-switch-inner:after {
    content: attr(data-off);
    width: 70px;
    height: 28px;
    background: white;
    border-radius: 0.25rem;
    position: absolute;
    top: 1px;
    left: 2px;

    text-align: center;
    transition: all 0.3s ease;
    box-shadow: 0px 0px 6px -2px #111;
    padding: 5px 0px;
  }

  /* Checkbox masqu√© */
  .btn-color-mode-switch input[type="checkbox"] {
    cursor: pointer;
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
    opacity: 0;
  }

  /* Background en mode dark */
  .btn-color-mode-switch
    input[type="checkbox"]:checked
    + label.btn-color-mode-switch-inner {
    background: rgb(32, 32, 32);
    color: #fff;
  }

  /* Switch en mode dark */
  .btn-color-mode-switch
    input[type="checkbox"]:checked
    + label.btn-color-mode-switch-inner:after {
    content: attr(data-on);
    left: 68px;
    background: #3c3c3c;
  }

  /* Text de gauche en mode dark */
  .btn-color-mode-switch
    input[type="checkbox"]:checked
    + label.btn-color-mode-switch-inner:before {
    content: attr(data-off);
    right: auto;
    left: 20px;
  }
</style>

<script>
  const body = document.body;
  const themeTrigger = document.getElementById(
    "color_mode",
  ) as HTMLInputElement;

  themeTrigger.addEventListener("change", () => {
    body.classList.toggle("dark");
  });

  /*  themeTrigger.addEventListener("click", () => {
    body.classList.toggle("dark");
  }); */
</script>
