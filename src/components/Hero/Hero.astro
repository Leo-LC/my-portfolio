<!-- Parallax Styling -->
<style>
  .hero_media {
    position: absolute;
    inset: 0;
    z-index: -1;
    pointer-events: none;
  }

  .hero_image {
    position: relative;
    width: 100vw;
    height: 100vh;
    object-fit: cover;
  }

  .hero_image-parallax {
    position: absolute;
    z-index: -1;
    width: 100vw;
    height: 100vh;
    object-fit: cover;
    display: none;
  }
</style>
