---
import SocialLinks from "./SocialLinks.astro";

import Switch from "./Switch.astro";

import { Icon } from "astro-icon";
---

<!-- <div class="loader text-8xl grid place-content-center">WELCOME</div> -->
<section id="hero" class="relative h-[100svh]">
  <div class="absolute inset-0 opacity-10 grayscale">
    <img class="thumbnail" src="src/images/Stars.jpg" alt="" />
  </div>
  <Switch />
  <SocialLinks />

  <div
    class="hero_wrapper absolute inset-0 pt-[var(--header-height)] pb-[var(--footer-height)] flex flex-col gap-8"
  >
    <!-- TODO : optimiser image -->

    <div class="text-center">
      <div class="clip">
        <h3 id="first-line" class="text-[1.75rem] md:text-5xl xl:text-[3.5rem]">
          Hi my name is LÃ©o,
        </h3>
      </div>
      <div class="clip">
        <h3 class="text-[1.75rem] md:text-5xl xl:text-[3.5rem]">
          I am a dedicated, passionate
        </h3>
      </div>
      <div class="clip">
        <h1 class="text-[6rem] md:text-[10rem] xl:text-[12rem] uppercase">
          Front-End
        </h1>
      </div>
      <div class="clip">
        <h1 class="text-[6rem] md:text-[10rem] xl:text-[12rem] uppercase">
          Developer
        </h1>
      </div>
      <div class="clip">
        <h3 id="last-line" class="text-[1.75rem] md:text-5xl xl:text-[3.5rem]">
          Let's create <span class="accent">YOUR</span> web today.
        </h3>
      </div>
    </div>

    <div class="cta flex gap-24 items-baseline text-center">
      <a
        href="/#contact"
        class="button relative inline-flex items-center justify-center p-0.5 overflow-hidden rounded-lg focus:ring-4 focus:outline-none focus:ring-blue-300"
      >
        <span
          class="relative px-5 py-2.5 transition-all ease-in duration-75 rounded-md"
        >
          Contact me
        </span>
      </a>

      <span>or start scrolling</span>
    </div>
  </div>
  <div
    class="border border-[var(--border-strong)] rounded-lg fixed bottom-10 right-10"
  >
    <Icon
      name="ph:arrow-down-thin"
      width="48px"
      height="100px"
      fill="var(--border-strong)"
      color="var(--text-primary)"
    />
  </div>
</section>

<style>
  .cta span {
    background-color: var(--component-bg);
    font-size: 1.25rem;
  }
  .cta .button {
    background: linear-gradient(
      to bottom right,
      var(--accent-border-subtle),
      var(--accent-border-primary)
    );
    font-size: 1.25rem;
  }

  .cta.button:hover {
    background: linear-gradient(
      to bottom right,
      var(--accent-border-primary),
      var(--accent-border-subtle)
    );
  }

  .cta .button:hover span {
    background-color: transparent;
  }

  [astro-icon] {
    transform: translateY(-10%);
    animation: upAndDown 1s ease-in-out infinite alternate;
  }

  @keyframes upAndDown {
    100% {
      transform: translateY(10%);
    }
  }
</style>

