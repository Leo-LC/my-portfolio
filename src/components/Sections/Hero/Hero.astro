<style is:global lang="scss">
  @import "../../../styles/_variables.scss";

  $title-size: 10rem;

  h3,
  h4 {
    font-size: 1.875rem;
    line-height: 1;
    padding-left: 0.2rem;
  }
  button {
    grid-row: 1/3;
    grid-column: 2/3;
    place-self: center;
  }

  // Hero Section

  .hero {
    position: relative;
    width: 100vw;
    height: 100vh;
  }

  .hero_wrapper {
    display: grid;
    grid-template-columns: 60% 40%;
    grid-template-rows: repeat(6, 1fr);
    grid-template-areas:
      "row1 row1"
      "row2 row2"
      "row3 row3"
      "row4 row4"
      "row5 row5"
      "row6 row6";

    position: absolute;
    inset: 0;
    overflow: hidden;
  }
  .hero_media {
    position: absolute;
    inset: 0;
    z-index: -1;
    pointer-events: none;
  }

  .hero_image {
    position: relative;
    width: 100vw;
    height: 100vh;
    object-fit: cover;
  }

  .hero_image-parallax {
    position: absolute;
    z-index: -1;
    width: 100vw;
    height: 100vh;
    object-fit: cover;
    display: none;
  }

  .hero_row {
    display: flex;
    grid-column: 1/2;
  }

  .hero_row_justify_end {
    justify-content: flex-end;
  }

  .first-hero-row {
    grid-column: 2/3;
    padding-top: $header-height;
  }

  .hero_row_text {
    display: flex;

    width: 100%;
    height: inherit;
    /*  overflow: hidden; */
  }

  .hero_row_separator {
    border: 1px solid $color-secondary;
  }
</style>

