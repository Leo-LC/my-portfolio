---
/* import { Image } from "astro:assets"; */
import "./projects.css";
const { index, title, tags, github, src } = Astro.props;
---

<a
  href={github}
  target="_blank"
  aria-label={`Link to the Repo of ${title}`}
  id={index}
  class="card"
  data-type="card"
>
  <!--   <Image src={src} alt="test" /> -->
  <!--  <div class="background">
    <span class="link">See the repo</span>
  </div> -->
  <span class="index">{index}</span>
  <span class="title">{title}</span>
  <ul class="tags">
    {tags.map((tag: string) => <li>{tag}.</li>)}
  </ul>

  <!--  <Icon name="fa:github-square" color="white" width="24px" class="icon" /> -->
</a>

<style>
  .tags {
    display: flex;
    font-family: var(--paragraph-font-family);
    font-size: 1.5rem;
    line-height: 1;
  }
  .card {
    position: relative;
    display: grid;
    align-items: center;
    place-content: center;
    gap: 1rem;
    grid-template-columns: 10% 1fr auto;
    overflow: hidden;
    transition: all 1s ease;
    cursor: pointer;
    border-bottom: 1px solid var(--text-primary);
    padding-inline-end: 2rem;
    max-width: 100%;
  }

  .card:first-child {
    border-top: 1px solid var(--text-primary);
  }

  .index,
  .title {
    font-family: var(--headings-font-family);
    font-size: 6rem;
    line-height: 1;
  }

  .card:hover {
    padding-block: 2rem;
  }

  .card:hover .background {
    top: 0;
  }
  .background {
    position: absolute;
    left: 50%;
    top: 100%;
    width: 100%;
    height: 100%;
    z-index: -1;
    transition: all 1s ease;
    display: flex;
    align-items: center;
  }

  .background img {
    height: 100%;
    object-fit: contain;
  }

  @media screen and (max-width: 1280px) {
    .card {
      grid-template-columns: 10% 1fr auto;
      padding-inline-end: 0.5rem;
      gap: 1rem;
      padding-block: 2rem;
    }

    .index,
    .title {
      font-size: 4rem;
    }

    .tags {
      display: flex;

      font-size: 1.2rem;
    }

    .background {
      top: 0;
    }
  }

  @media screen and (max-width: 768px) {
    .card {
      grid-template-columns: 10% 1fr auto;
      padding-inline-end: 0.5rem;
    }

    .index,
    .title {
      font-size: 2rem;
    }

    .tags {
      font-size: 1rem;
      flex-direction: column;
      text-align: right;
    }

    a {
      display: none;
    }
  }
</style>
