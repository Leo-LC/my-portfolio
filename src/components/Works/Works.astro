<style>
  #works {
    background-color: var(--color-primary);
  }
  #worksScroller {
    overflow: hidden;
  }
  .wrapper {
    overflow: hidden;
    position: relative;
    width: 100%;
    height: calc(100vh - var(--header-height));
  }
  .numbers {
    position: absolute;
    top: 50%;

    display: flex;
    flex-direction: column;
    gap: 2rem;
    font-size: 2rem;
  }
  .titres {
    position: absolute;
    top: 50%;

    left: 10rem;
    display: flex;
    flex-direction: column;
    gap: 2rem;
    font-size: 2rem;
  }
  .works {
    position: absolute;
    display: flex;
    flex-direction: column;
    gap: 2rem;
    left: 50%;
    top: 50%;
    transform: translate(-50%, calc(-50% + 28vw));
  }
  .work {
    width: 50vw;
    aspect-ratio: 16/9;
    border-radius: 3rem;
    overflow: hidden;
  }
</style>

<script>
  import gsap from "gsap";
  import { ScrollTrigger } from "gsap/dist/ScrollTrigger";
  gsap.registerPlugin(ScrollTrigger);

  gsap.to("#worksScroller", {
    scrollTrigger: {
      id: "worksScroller",
      trigger: "#worksScroller",
      start: "top 60px",
      endTrigger: "document",
      end: "bottom bottom",
      scrub: true,
      markers: true,
    },
    overflow: "scroll",
  });
</script>
