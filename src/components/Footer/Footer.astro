---
import DateAPI from "../API/DateAPI/DateAPI";
import WeatherAPI from "../API/WeatherAPI/WeatherAPI";
/* import SpotifyAPI from "../API/SpotifyAPI/SpotifyAPI"; */

const date = new Date();
const year = date.getFullYear();
---

<footer class="flex justify-between p-4 relative bottom-0">
  <WeatherAPI client:load />
  <!--   <SpotifyAPI client:load /> -->
  <p>Copyright {year}</p>
  <DateAPI client:load />
</footer>

<style>
  footer {
    height: var(--footer-height);
    position: relative;
    bottom: 0;
    background-color: var(--bg-primary);
    border-top: 1px solid white;
  }
</style>
