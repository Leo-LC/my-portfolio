---
import DateAPI from "../API/DateAPI/DateAPI";

const date = new Date();
const year = date.getFullYear();
---

<footer class="flex text-base p-4 relative bottom-0 overflow-hidden">
  <p class="flex md:hidden">&#169; {year}</p>
  <p class="hidden md:flex">Copyright &#169; {year} all rights reserved</p>
  <DateAPI client:load />
</footer>

<style>
  footer {
    color: var(--text-primary);
    border-top: 1px solid var(--text-primary);
  }

  p {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
  }
</style>
